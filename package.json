{
  "name": "expense-svc",
  "version": "1.0.0",
  "description": "A RESTful API service for managing expenses built with Fastify, TypeScript, and Prisma.",
  "main": "dist/app.js",
  "scripts": {
    "build": "tsc",
    "dev": "npm run build && concurrently -k -p \"[{name}]\" -n \"TypeScript,App\" -c \"yellow.bold,cyan.bold\" \"npm:watch\" \"npm:dev:start\"",
    "dev:start": "fastify start --ignore-watch=.ts$ -w -l info -P dist/app.js",
    "start": "npm run build && fastify start -l info dist/app.js",
    "watch": "tsc -w",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate deploy",
    "db:setup": "npm run prisma:generate && npm run prisma:migrate",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "docker:build": "docker build -t expense-svc .",
    "docker:run": "docker run -p 3000:3000 expense-svc",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up --build",
    "docker:prod": "docker-compose up --build",
    "docker:stop": "docker-compose down"
  },
  "keywords": ["fastify", "typescript", "prisma", "rest-api", "expenses"],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@fastify/autoload": "^6.0.0",
    "@fastify/sensible": "^6.0.0",
    "@fastify/swagger": "^9.5.1",
    "@fastify/swagger-ui": "^5.2.3",
    "@prisma/client": "^6.10.1",
    "fastify": "^5.0.0",
    "fastify-plugin": "^5.0.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^22.1.0",
    "concurrently": "^9.0.0",
    "fastify-cli": "^7.4.0",
    "fastify-tsconfig": "^3.0.0",
    "jest": "^29.7.0",
    "prisma": "^6.10.1",
    "ts-jest": "^29.1.2",
    "typescript": "~5.8.2"
  }
}
